          "Ref": "VPC"
        },
        "InternetGatewayId": {
          "Ref": "InternetGateway"
        }
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "da26c97a-bdba-41f8-82b8-962a137ec81c"
        }
      }
    },
    "PublicRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Metadata": {
        "Description": "A single Routing Table for all Public Subnets.",
        "AWS::CloudFormation::Designer": {
          "id": "46b5ed48-60aa-4a1d-b732-df590df9ff81"
        }
      },
      "Properties": {
        "VpcId": {
          "Ref": "VPC"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
