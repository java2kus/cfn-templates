        "GroupId": {
          "Fn::GetAtt": [
            "VPC",
            "DefaultSecurityGroup"
          ]
        },
        "FromPort": "-1",
        "ToPort": "-1",
        "IpProtocol": "icmp"
      }
    },
    "AllowTrustICMPThroughDefaultSG": {
