        "EnableDnsHostnames": true,
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "VpcName"
            }
          },
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackId"
            }
          },
          {
            "Key": "network",
            "Value": "public"
          }
        ]
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "9fb1817b-85dd-4829-ad56-28194c3111ed"
        }
      }
    },
    "InternetGateway": {
      "Type": "AWS::EC2::InternetGateway",
      "Metadata": {
        "Description": "Provides Internet Access (1-to-1 NATing) for the Public Subnets.",
        "AWS::CloudFormation::Designer": {
          "id": "c150f1ef-d589-4086-87e8-591cd5912046"
        }
      },
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "VpcName"
                  },
                  "-IGW"
                ]
              ]
            }
          },
          {
            "Key": "Application",
            "Value": {
              "Ref": "AWS::StackId"
            }
          },
          {
            "Key": "network",
            "Value": "public"
          }
        ]
      }
    },
    "AttachGateway": {
